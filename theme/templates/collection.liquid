{% paginate collection.products by 12 %}

  <header class="page-header">
    <div class="container">
      <h1 class="page-header__title">{{ collection.title }}</h1>
    </div>
  </header>

  <div class="page-main" id="main-vue">
    <div class="container">
      <div class="row">
        {% for product in collection.products %}
          <div class="col col--1-3">
            {% render 'product-tile' with product as product %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {% if paginate.pages > 1 %}
    {% render 'pagination' %}
  {% endif %}

{% endpaginate %}
